<!DOCTYPE html>
<html lang="en">
<head>
    <script type="text/javascript">
    function ShowPopUp() {
        document.getElementById("firstButton").style.backgroundColor = "purple";
        document.getElementById("firstButton").style.color = "yellow";
        document.getElementById("firstButton").style.fontSize = "2em";
        document.getElementById("firstButton").innerHTML = "now click here";
        document.getElementById("btnClick"). innerHTML = "....";
        document.getElementById("btnClick").disabled = "true";
    }

    function avoidDoubleAppend(){
        document.getElementById("differentFunction").disabled = "true";
        let resetButton = document.createElement("button");
        resetButton.innerText = "reset Page";
        resetButton.addEventListener("click", resetPage);
        document.getElementById("mainArea").appendChild(resetButton)
        return alert("did you do it right? if not, please reload page.");
    }
    function resetPage(){
        window.location.reload();
    }

    function ShowPopUp2() {
        let newArea = document.createElement('p');
        let spacer = document.createElement('hr');
        let mainArea = document.getElementById("mainArea");
        mainArea.appendChild(spacer);
        mainArea.append(newArea);
        newArea.id  = "newAreaId";
        newArea.innerHTML = "Second C# event handled...";
        newArea.style.color = "red";
        newArea.style.border = "2em double red";
        document.getElementById("btnClick").innerHTML = "nice";
        document.getElementById("btnClick").style.fontSize = "2em";
        document.getElementById("btnClick").style.color = "white";
        document.getElementById("btnClick").style.backgroundColor = "blue";
        document.getElementById("buttonBorder").style.border = "5px solid gray";
        document.getElementById("buttonBorder").style.backgroundColor = "orange";
        let button1 = document.getElementById("firstButton");
        button1.id = "differentFunction";
        document.getElementById("differentFunction").addEventListener("mouseenter", avoidDoubleAppend);
    }
</script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Welcome to C#</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DotnetWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">DotnetWebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Page 2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/PageThree">Page 3</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - DotnetWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>